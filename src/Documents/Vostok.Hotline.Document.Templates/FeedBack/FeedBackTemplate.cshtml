@{
    Layout = "~/Shared/Templates/_Layout.cshtml";
}

@model Vostok.Hotline.Document.Templates.FeedBack.FeedBackModel

<style>
    .colored {
        color: #7D7D80;
    }
</style>

<tr style="border-collapse:collapse">
    <td align="center" class="es-m-p20tb" style="padding:20px;Margin:0">
        <!-- Пример блока с текстом -->
        <table bgcolor="#FFFFFF" cellpadding="0" cellspacing="0" width="100%">
            <tr style="border-collapse:collapse">
                <td>
                    <table width="100%" cellpadding="0" cellspacing="0" style="min-width:100%;">
                        <tbody>
                            <tr bgcolor="#f9f9f9">
                                <td valign="top" style="padding:20px 10px 20px 10px; font-family: Arial,sans-serif; font-size: 16px; line-height:20px;"><p class="colored">Відгук від:</p></td>
                                <td valign="top" style="padding:20px 10px 20px 10px; font-family: Arial,sans-serif; font-size: 16px; line-height:20px;">@Model.FullName (@Model.Login)</td>
                            </tr>
                            <tr>
                                <td valign="top" style="padding:20px 10px 20px 10px; font-family: Arial,sans-serif; font-size: 16px; line-height:20px;"><p class="colored">Посада:</p></td>
                                <td valign="top" style="padding:20px 10px 20px 10px; font-family: Arial,sans-serif; font-size: 16px; line-height:20px;">@Model.Position</td>
                            </tr>
                            <tr bgcolor="#f9f9f9">
                                <td valign="top" style="padding:20px 10px 20px 10px; font-family: Arial,sans-serif; font-size: 16px; line-height:20px;"><p class="colored">Email:</p></td>
                                <td valign="top" style="padding:20px 10px 20px 10px; font-family: Arial,sans-serif; font-size: 16px; line-height:20px;">@Model.Email</td>
                            </tr>
                            <tr>
                                <td valign="top" style="padding:20px 10px 20px 10px; font-family: Arial,sans-serif; font-size: 16px; line-height:20px;"><p class="colored">Оцінка зручності інтерфейсу:</p></td>
                                <td valign="top" style="padding:20px 10px 20px 10px; font-family: Arial,sans-serif; font-size: 16px; line-height:20px;">@Model.Rating</td>
                            </tr>
                            @if (!String.IsNullOrWhiteSpace(Model.Message))
                            {
                                <tr bgcolor="#f9f9f9">
                                    <td valign="top" style="padding:20px 10px 20px 10px; font-family: Arial,sans-serif; font-size: 16px; line-height:20px;"><p class="colored">Коментар:</p></td>
                                    <td valign="top" style="padding:20px 10px 20px 10px; font-family: Arial,sans-serif; font-size: 16px; line-height:20px;">@Model.Message</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
        </table>
    </td>
</tr>